    "components": {
        "requestBodies": {
            "LoginRequest": {
                "description": "Login users.",
                "required": true,
                "content": {
                    "application/x-www-form-urlencoded": {
                        "schema": {
                            "required": [
                                "email",
                                "password"
                            ],
                            "properties": {
                                "email": {
                                    "description": "The user email.",
                                    "type": "string",
                                    "format": "email",
                                    "example": "user@email.com"
                                },
                                "password": {
                                    "description": "The user password.",
                                    "type": "string",
                                    "example": "123456"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "RegisterRequest": {
                "description": "Register users.",
                "required": true,
                "content": {
                    "application/x-www-form-urlencoded": {
                        "schema": {
                            "required": [
                                "email",
                                "username",
                                "birthday",
                                "password",
                                "password_confirmation"
                            ],
                            "properties": {
                                "email": {
                                    "description": "The user email.",
                                    "type": "string",
                                    "example": "user@email.com"
                                },
                                "username": {
                                    "description": "The username.",
                                    "type": "string",
                                    "example": "username"
                                },
                                "birthday": {
                                    "description": "The user birthday.",
                                    "type": "string",
                                    "example": "2000-01-01"
                                },
                                "password": {
                                    "description": "The user password.",
                                    "type": "string",
                                    "format": "password",
                                    "example": "123456"
                                },
                                "password_confirmation": {
                                    "description": "The user password confirmation.",
                                    "type": "string",
                                    "format": "password",
                                    "example": "123456"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "RequestResetPasswordRequest": {
                "description": "Reset user password request.",
                "required": true,
                "content": {
                    "application/x-www-form-urlencoded": {
                        "schema": {
                            "required": [
                                "email"
                            ],
                            "properties": {
                                "email": {
                                    "description": "The user email.",
                                    "type": "string",
                                    "format": "email",
                                    "example": "user@email.com"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "ResetPasswordRequest": {
                "description": "Reset user password request.",
                "required": true,
                "content": {
                    "application/x-www-form-urlencoded": {
                        "schema": {
                            "required": [
                                "token",
                                "email",
                                "password",
                                "password_confirmation"
                            ],
                            "properties": {
                                "token": {
                                    "description": "The token.",
                                    "type": "string",
                                    "example": "jhkl31xfdc34g1fds5g1351gdf351dfg"
                                },
                                "email": {
                                    "description": "The user email.",
                                    "type": "string",
                                    "example": "user@email.com"
                                },
                                "password": {
                                    "description": "The user new password.",
                                    "type": "string",
                                    "format": "password",
                                    "example": "123456"
                                },
                                "password_confirmation": {
                                    "description": "The user new password confirmation.",
                                    "type": "string",
                                    "format": "password",
                                    "example": "123456"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "OfferStatusRequest": {
                "description": "Change offer status.",
                "required": true,
                "content": {
                    "application/x-www-form-urlencoded": {
                        "schema": {
                            "required": [
                                "status"
                            ],
                            "properties": {
                                "status": {
                                    "type": "string",
                                    "enum": [
